package application;

import java.io.ByteArrayInputStream;
import java.io.IOException;
import java.io.ObjectInputStream;
import java.io.ObjectOutputStream;
import java.net.Socket;

import org.opencv.core.Mat;
import org.opencv.core.MatOfByte;
import org.opencv.highgui.Highgui;

import javafx.scene.image.Image;
import javafx.scene.image.ImageView;

public class PictureClient implements Runnable {

	boolean running;

	int state;

	Socket client;

	ObjectOutputStream out;

	ObjectInputStream in;

	ImageView imageViewer;
	
	Mat intermediateMat = new Mat();
	
	MatOfByte byteMat = new MatOfByte();
	
	int port;

	public PictureClient(ImageView image, int port) {
		imageViewer = image;
		this.port = port;
	}

	@Override
	public void run() {
		running = true;
		state = 0;
		while (running) {
			switch (state) {
			case 0:
				try {
					client = new Socket("10.28.49.1", 5800);
					System.out.println(client.isConnected());
					out = new ObjectOutputStream(client.getOutputStream());
					in = new ObjectInputStream(client.getInputStream());
				} catch (IOException e) {
					e.printStackTrace();
				} finally {
					state++;
				}
				break;

			case 1:
				try {
					System.out.println(in.readObject());
					intermediateMat = (Mat) in.readObject();
					Highgui.imencode(".bmp", intermediateMat, byteMat);
					imageViewer.setImage(new Image(new ByteArrayInputStream(byteMat.toArray())));
				} catch (IOException | ClassNotFoundException e) {
					e.printStackTrace();
				}
				break;
			}
		}
	}
	
	public void stop() {
		running = false;
	}

}
